<?xml version="1.0" encoding="utf-8"?>
<Container>
<Beta>True</Beta>
<Category>HomeAutomation:</Category>
<Date>2016-12-28</Date>
<Changes>
  [center][font size=4]Kerberos Web Docker[/font][/center]
  [b]28.DEC.2016:[/b]First template[br]
</Changes>
<Support>https://lime-technology.com/forum/index.php?topic=55067.0</Support>
<Name>Kerberos Web Docker</Name>
<Description>
  Kerberos.io is a free video surveillance solution.[br][br]
  Web is the visualisation engine, a separate Docker - Machinery - is required for the processing.[br]
</Description>
<Registry>https://hub.docker.com/r/kerberos/web/</Registry>
<GitHub>https://github.com/kerberos-io/web</GitHub>
<Repository>kerberos/web</Repository>
<BindTime>true</BindTime>
<Privileged>false</Privileged>
<Networking>
  <Mode>bridge</Mode>
  <Publish>
    <Port>
      <HostPort>780</HostPort>
      <ContainerPort>80</ContainerPort>
      <Protocol>tcp</Protocol>
    </Port>
    <Port>
      <HostPort>7443</HostPort>
      <ContainerPort>7443</ContainerPort>
      <Protocol>tcp</Protocol>
    </Port>
  </Publish>
</Networking>
<Data>
  <Volume>
    <HostDir>/mnt/user/appdata/kerberosio/config</HostDir>
    <ContainerDir>/etc/opt/kerberosio/config</ContainerDir>
    <Mode>rw</Mode>
  </Volume>
  <Volume>
    <HostDir>/mnt/user/appdata/kerberosio/capture</HostDir>
    <ContainerDir>/etc/opt/kerberosio/capture</ContainerDir>
    <Mode>rw</Mode>
  </Volume>
  <Volume>
    <HostDir>/mnt/user/appdata/kerberosio/logs</HostDir>
    <ContainerDir>/etc/opt/kerberosio/logs</ContainerDir>
    <Mode>rw</Mode>
  </Volume>
</Data>
<WebUI>http://[IP]:[PORT:8889]</WebUI>
<Banner>https://kerberos.io/images/kerberos.png</Banner>
<Icon>https://kerberos.io/images/kerberos.png</Icon>
</Container>
